<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE tiles-definitions PUBLIC
"-//Apache Software Foundation//DTD Tiles Configuration
2.0//EN" "http://tiles.apache.org/dtds/tiles-config_2_0.dtd">

<tiles-definitions>
	
    <definition name="layout" 
                template="/layout/layout.jsp">	      
        <put-attribute name="head" 
                       value="/layout/scripts/head.jsp"/>
        <put-attribute name="header" 
                       value="/layout/scripts/header.jsp"/>
        <put-attribute name="body" 
                       value="/layout/scripts/body.jsp"/>          
        <put-attribute name="footer" 
                       value="/layout/scripts/footer.jsp"/>               
    </definition>
    
    <definition name="index" extends="layout">
        <put-attribute name="body" value="/index.jsp" />
    </definition>
    
    <definition name="programs" extends="layout">
        <put-attribute name="body" value="/admin/program.jsp" />
    </definition>
    
    <definition name="maintenance_program" extends="layout">
        <put-attribute name="body" value="/admin/maintenance_program.jsp" />
    </definition>
</tiles-definitions>

